@model WebApplication.Models.GenreEditee

@{
    ViewBag.Title = "Ajouter/Editer un genre";

    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
}

<div class="row">
    <div class="col-lg-3">
        <a href="@Url.Action("ListeGenre", "Genre")" class="btn btn-labeled btn-default">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-left"></i></span>Retour à la liste des genres
        </a>
    </div>
</div>

<br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GenreID)

        <div class="form-group">
            @Html.LabelFor(model => model.GenreName, "Nom de Genre *", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GenreName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Entrer le nom de genre" }})
                @Html.ValidationMessageFor(model => model.GenreName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Valider" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
}

