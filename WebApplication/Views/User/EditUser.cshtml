@model WebApplication.Models.UserEditee

@{
    ViewBag.Title = "Ajouter/Editer un utilisateur";

    <link rel="stylesheet" href="~/Content/style.css" />
}


<div class="row">
    <div class="col-lg-3">
        <a href="@Url.Action("ListeUser", "User")" class="btn btn-labeled btn-default">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-left"></i></span>Retour à la liste des clients
        </a>
    </div>
</div>

<br />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Utilisateur</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserID)

        <div class="form-group">
            @Html.LabelFor(model => model.Name,"Nom *", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
