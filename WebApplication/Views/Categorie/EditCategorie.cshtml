@model WebApplication.Models.CategorieEditee

@{
    ViewBag.Title = "Ajouter/Editer une catégorie";

    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
}


<div class="row">
    <div class="col-lg-3">
        <a href="@Url.Action("ListeCategorie", "Categorie")" class="btn btn-labeled btn-default">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-left"></i></span>Retour à la liste des catégories
        </a>
    </div>
</div>

<br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryID)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, "Nom de catégorie *", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Entrer le nom de catégorie" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" value="Valider" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
}