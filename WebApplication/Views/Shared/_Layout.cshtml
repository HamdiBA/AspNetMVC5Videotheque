<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Locat'Me</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
</head>
<body>



    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    @Html.ActionLink("Locat'Me", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <span class="glyphicon glyphicon-home" style="padding-right:10px" aria-hidden="true"></span>
                            <b>ACCUEIL</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListeArticle", "Article")">
                            <span class="glyphicon glyphicon-list-alt" style="padding-right:10px" aria-hidden="true"></span>
                            <b>ARTICLES</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListeClient", "CLient")">
                            <span class="glyphicon glyphicon-asterisk" style="padding-right:10px" aria-hidden="true"></span>
                            <b>CLIENTS</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListeUser", "User")">
                            <span class="glyphicon glyphicon-user" style="padding-right:10px" aria-hidden="true"></span>
                            <b>USERS</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListeLocation", "Location")">
                            <span class="glyphicon glyphicon-shopping-cart" style="padding-right:10px" aria-hidden="true"></span>
                            <b>LOCATIONS</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListeFacture", "Facture")">
                            <span class="glyphicon glyphicon-print" style="padding-right:10px" aria-hidden="true"></span>
                            <b>FACTURES</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("ListeTopArticle", "TopArticle")">
                            <span class="glyphicon glyphicon-stats" style="padding-right:10px" aria-hidden="true"></span>
                            <b>TOP ARTICLES</b>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Profil", "Profile")">
                            <span class="glyphicon glyphicon-stats" style="padding-right:10px" aria-hidden="true"></span>
                            <b>MON PROFILE</b>
                        </a>
                    </li>
                }

                <li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("SignOut", "Home")">
                            <span class="glyphicon glyphicon-log-out" style="padding-right:10px" aria-hidden="true"></span>
                            <b>DECONNEXION</b>
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Home")">
                            <span class="glyphicon glyphicon-log-in" style="padding-right:10px" aria-hidden="true"></span>
                            <b>CONNEXION</b>
                        </a>
                    }
                </li>

            </ul>
        </div>
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a class="navbar-brand" href="#menu-toggle" id="menu-toggle">
                        <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
                    </a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbar-brand-centered">
                    <ul class="nav navbar-nav">
                        <li><a><b>@ViewBag.Title</b></a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="navbar-brand">
                                    Bonjour @(User.Identity.IsAuthenticated ?
                        HttpContext.Current.User.Identity.Name : " ")
                                </a>
                            }
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
       
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

