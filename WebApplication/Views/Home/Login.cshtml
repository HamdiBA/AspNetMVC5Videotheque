@model DAL.Utilisateur

@{
    ViewBag.Title = "CONNEXION";
}


@using (Html.BeginForm("Login", "Home", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

   

    <div class="container" style="padding-top:10%">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

            <!-- Div Panel -->
            <div class="panel panel-success">

                <!-- Panel Heading -->
                <div class="panel-heading">
                    <div class="panel-title"><b>Connexion</b></div>
                </div><!-- End panel heading -->
                <!-- Panel body -->
                <div class="panel-body">

                    <form class="form-horizontal" role="form">

                        <!-- Username -->
                        <div class="input-group input-username">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Pseudo" } })
                            
                        </div>
                        <!-- Password -->
                        <div class="input-group input-password">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Mot de passe", @type = "password" } })
                        </div>

                        <div style="margin-top:10px">
                            <span style="color:red"><b>@Html.ValidationSummary(false)</b></span>
                        </div>

                        <div class="form-group login-button">
                            <div class="col-sm-12 controls">
                                <input type="submit" value="Se connecter" class="btn btn-success" />
                            </div>
                        </div>

                    </form><!-- ENd form -->
                </div><!-- ENd panel body -->
            </div><!-- End panel group -->

        </div><!-- End col div -->
    </div><!-- End container -->

}

<style type="text/css">
    

		.input-username, .input-password, .checkbox_remember, .login-button {
			margin-top:15px;
		}
}
</style>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}