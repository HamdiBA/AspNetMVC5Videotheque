@model WebApplication.Models.UserEditee

@{
    ViewBag.Title = "Modifier mon profil";

    <link rel="stylesheet" href="~/Content/style.css" />

}

<div class="row">
    <div class="col-lg-3">
        <a href="@Url.Action("Profil", "Profile")" class="btn btn-labeled btn-default">
            <span class="btn-label"><i class="glyphicon glyphicon-chevron-left"></i></span>Retour à mon profil
        </a>
    </div>
</div>

<br/>


